<h1 class="center">Sign In</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_tag "/sessions" do %>
    
      <p>
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </p>
    
      <p>
        <%= label_tag :passwd %>
        <%= text_field_tag :passwd %>
      </p>
    
      <%= submit_tag "Login", class: "btn btn-primary" %>
    <% end %>
  </div>

</div>


