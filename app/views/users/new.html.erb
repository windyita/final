<% provide(:title, 'Sign Up') %>
<h1>Sign up</h1>

<div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

	  <%= f.label :dept %>
      <%= f.text_field :dept %>

      <%= f.label :role %>
      <%= f.text_field :role %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Create Account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</div>

